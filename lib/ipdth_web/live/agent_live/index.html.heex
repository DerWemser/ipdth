<.header>
  Listing Agents
  <:actions>
    <.link patch={~p"/agents/new"}>
      <.button>New Agent</.button>
    </.link>
  </:actions>
</.header>

<%!-- TODO: 2024-02-03 -- Only show actions if the Agent is owned by the current_user --%>
<%!-- TODO: 2024-02-03 -- Create activate action if the Agent is owned by the current_user --%>
<%!-- TODO: 2024-02-03 -- Create agent_badge component that matches colors to agent state --%>

<.table
  id="agents"
  rows={@streams.agents}
  row_click={fn {_id, agent} -> JS.navigate(~p"/agents/#{agent}") end}
>
  <:col :let={{_id, agent}} label="Name"><%= agent.name %></:col>
  <:col :let={{_id, agent}} label="Description"><%= agent.description %></:col>
  <:col :let={{_id, agent}} label="Url"><%= agent.url %></:col>
  <:col :let={{_id, agent}} label="Bearer token"><%= agent.bearer_token %></:col>
  <:col :let={{_id, agent}} label="Status"><%= agent.status %></:col>
  <:action :let={{_id, agent}}>
    <div class="sr-only">
      <.link navigate={~p"/agents/#{agent}"}>Show</.link>
    </div>
    <.link patch={~p"/agents/#{agent}/edit"}>Edit</.link>
  </:action>
  <:action :let={{id, agent}}>
    <.link
      phx-click={JS.push("delete", value: %{id: agent.id}) |> hide("##{id}")}
      data-confirm="Are you sure?"
    >
      Delete
    </.link>
  </:action>
</.table>

<.modal :if={@live_action in [:new, :edit]} id="agent-modal" show on_cancel={JS.patch(~p"/agents")}>
  <.live_component
    module={IpdthWeb.AgentLive.FormComponent}
    id={@agent.id || :new}
    title={@page_title}
    action={@live_action}
    agent={@agent}
    patch={~p"/agents"}
  />
</.modal>
