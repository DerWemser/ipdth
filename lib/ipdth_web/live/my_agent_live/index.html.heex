<.header>
  My Agents
  <:actions>
    <.link patch={~p"/my/agents/new"}>
      <.button>New Agent</.button>
    </.link>
  </:actions>
</.header>

<%!-- TODO: 2024-01-21 - Make this into a card view --%>
<.table
  id="agents"
  rows={@streams.agents}
  row_click={fn {_id, agent} -> JS.navigate(~p"/my/agents/#{agent}") end}
>
  <:col :let={{_id, agent}} label="Name"><%= agent.name %></:col>
  <:col :let={{_id, agent}} label="Description"><%= agent.description %></:col>
  <:col :let={{_id, agent}} label="Url"><%= agent.url %></:col>
  <:col :let={{_id, agent}} label="Bearer token"><%= agent.bearer_token %></:col>
  <:col :let={{_id, agent}} label="Status"><%= agent.status %></:col>
  <:action :let={{_id, agent}}>
    <.link patch={~p"/my/agents/#{agent}/edit"}>Edit</.link>
  </:action>
  <:action :let={{id, agent}}>
    <.link
      phx-click={JS.push("delete", value: %{id: agent.id}) |> hide("##{id}")}
      data-confirm="Are you sure?"
    >
      Delete
    </.link>
  </:action>
</.table>

<.modal :if={@live_action in [:new, :edit]} id="agent-modal" show on_cancel={JS.patch(~p"/my/agents")}>
  <.live_component
    module={IpdthWeb.MyAgentLive.FormComponent}
    id={@agent.id || :new}
    title={@page_title}
    action={@live_action}
    agent={@agent}
    patch={~p"/agents"}
  />
</.modal>
